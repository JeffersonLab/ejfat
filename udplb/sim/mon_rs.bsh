#!/bin/bash 
while true; do
   date=$(stat -c %y "$1")
   while sleep 1e-1; do 
      date2=$(stat -c %y "$1")
      if [[ $date2 != $date ]]; then 
         sn-cli -p $REGIO_SELECT -c runsim.txt p4-config-apply 2> runsim.log
         grep ERR runsim.log|wc -l
         grep OK runsim.log|wc -l
         break; 
      fi
     # possibly exit [status] instead of break
     # or if you want to watch for another change, date=$date2
   done
done
